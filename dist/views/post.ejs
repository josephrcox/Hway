<head>
    <link rel="stylesheet" href="/dist/css/post.css">
</head>

<body>

<div class="post_creation_container">
   <div class="np_types">
      <div class="np_types-text np_type" data-selected="true">
         <span class="np_types_title">Text</span>
      </div>
      <div class="np_types-link np_type" data-selected="false">
         <span class="np_types_title">Link</span>
      </div>
      <div class="np_types-photo np_type" data-selected="false">
         <span class="np_types_title">Photo</span>
      </div>
      <div class="np_types-poll np_type" data-selected="false">
         <span class="np_types_title">Poll</span>
      </div>
   </div>
   <div class="np_inputs">
      <div class="np-title np_input" >
         <label class="np_input_label">Title</label>
         <input type="text" autocomplete="off">
      </div>
      <div class="np-body np_input">
         <label class="np_input_label">Body</label>
         <textarea autocomplete="off"></textarea>
      </div>
      <div class="np-link np_input"  style="display: none;">
         <label class="np_input_label">Link</label>
         <input type="url" autocomplete="off">
      </div>
      <div class="np-file np_input" style="display: none;">
         <label class="np_input_label" >Image Upload</label>
         <input type="file" autocomplete="off" accept="image/*">
      </div>
      <div class="np-topic np_input">
         <label class="np_input_label">Topic</label>
         <input type="text" autocomplete="off">
      </div>
      <div class="np-nsfw np_input">
         <label class="np_input_label">NSFW</label>
         <input type="checkbox" autocomplete="off">
      </div>
      <div class="np_logs" style="display: none;"></div>
      <div class="np_submit">
         <div class="np_submit_bttn button">
            Submit
         </div>
      </div>
   </div>




</div>


   <script src="/dist/scripts/frontend/modules/createPost.js" type="module"></script>

</body>