<head>
    <link rel="stylesheet" href="dist/css/login.css">
</head>

<div class="login-reg">
    <div>Sign up</div>
    <a href="/login">Already signed up? <strong>Click here!</strong></a>
        <div id="reg-form" autocomplete="off">
            <!-- <input type="text" autocomplete="off" id="username" name="name" placeholder="username" /><br/>
            <input type="password" autocomplete="off" id="password" name="password" placeholder="password" /><br/> -->
            <input type="text" autocomplete="off" id="username" name="name" placeholder="username" class="general_input" pattern="[a-zA-Z0-9,_-]*" minlength="3" maxlength="30" /><br/>
            <input type="password" autocomplete="off" id="password" name="password" placeholder="password" class="general_input" minlength="8" maxlength="50"/><br/>
            <input type="email" autocomplete="off" id="email" name="email" placeholder="email (optional for password resets)" class="general_input"/><br/>
            <input type="button" value="Register" id='register_submit' class="button_submit"/>
        </div>
        <div id='logs'></div>
    
</div>

<script src="/dist/scripts/frontend/modules/register.js" type="module"></script>