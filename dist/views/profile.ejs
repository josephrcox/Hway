<head>
   <link rel="stylesheet" type="text/css" href="../dist/css/profile.css" />
</head>

<body>
<div id="sitebody" class="sitebody-flex">
   <div class="profile_container">
      <div class="profile_left">
         <div class="profile-info_avatar_name">
            <img class="profile-info_avatar_img" alt="User avatar">
            <span class="profile-info_name"></span>
         </div>
         <label for="avatar_file" id="avatar_file_label" style="display: none;">Change avatar</label>
         <input type="file" id="avatar_file" accept="image/png, image/jpeg, image/gif" style="display:none;"></input>
         <div class="profile-info_stats">
            <div class="profile-info_stats_table">
            </div>
         </div>
      </div>
      <div class="profile_right menu_shadow">
         <div class="profile-feed">
            <div class="np_input_label">Posts</div>
            <div id="postsArray"></div>
            <div class="np_input_label">Comments</div>
            <div id="comments"></div>
         </div>
         
      </div>
   </div>
   

</div>

<script src="../dist/scripts/frontend/modules/profile.js" type="module"></script>
</body>